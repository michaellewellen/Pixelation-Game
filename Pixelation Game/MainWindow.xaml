<Window x:Class="Pixelation_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixelation_Game"
        mc:Ignorable="d"
        Background="Black"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
       
    </Window.Resources>
    
    <Grid>
        <Image x:Name="AdultImage"
               HorizontalAlignment="Center"
               VerticalAlignment="Center" 
               Stretch="Uniform"
               SnapsToDevicePixels="True"
               Visibility="Collapsed"
               UseLayoutRounding="True"
               Panel.ZIndex="0"/>
        <Image x:Name="BabyImage"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               MouseDown="BabyImage_MouseDown"
               Panel.ZIndex="1">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="BabyScale" ScaleX="1" ScaleY="1"/>
                    <TranslateTransform x:Name="BabyTranslate" X="0" Y="0"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Grid x:Name="TitleScreen" Background="Black" Panel.ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
                <TextBlock Text="GUESS THAT BABY!"
           FontSize="120"
           FontFamily="Impact"
           FontWeight="Bold"
           HorizontalAlignment="Center"
           TextAlignment="Center"
           Margin="0 0 0 30">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="Gold" Offset="0" />
                            <GradientStop Color="Orange" Offset="1" />
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Gray"
                          BlurRadius="10"
                          Direction="320"
                          ShadowDepth="4"
                          Opacity="0.7" />
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
